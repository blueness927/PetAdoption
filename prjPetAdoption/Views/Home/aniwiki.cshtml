@model prjPetAdoption.Models.IndexViewModel

@{
    ViewBag.Title = "aniwiki";
}
<br/>
<div id="app">
    <h1 style="font-family:微軟正黑體;">寵物圖鑑</h1>
    <hr/>
    <h4 style="font-family:微軟正黑體;">理解動物 善待彼此</h4><br/>
    <label style="font-family:微軟正黑體;">
        詳細模式
        <input type="checkbox" v-model="mode_detail" />
    </label>

    </br>
    <div class="pet {{mode_detail?'detail':''}} " v-for="pet in pets" >
        <img src="{{pet.img}}" />
        <div class="infos">
            <h2 class="name" style="font-family:微軟正黑體;">{{pet.name}}</h2>
            <h5 class="personality" v-if="!mode_detail" style="font-family:微軟正黑體;">個性：{{pet.personality.substring(0,5)}}</h5>
            <h4 class="personality" v-if="mode_detail" style="font-family:微軟正黑體;">
                個性：{{pet.personality}}
            </h4>
            <h5 class="color" v-if="!mode_detail" style="font-family:微軟正黑體;">毛色：{{pet.color.substring(0,5)}}</h5>
            <h4 class="color" v-if="mode_detail" style="font-family:微軟正黑體;">
                毛色：{{pet.color}}
            </h4>
            <h4 class="feature" v-if="mode_detail" style="font-family:微軟正黑體;">特徵：{{pet.feature}}</h4>
        </div>
    </div>
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.28/vue.js'></script>
@Styles.Render("~/Content/aniwiki/AniWIKI_style.css")
@Scripts.Render("~/Scripts/aniwiki/aniwiki.js")

