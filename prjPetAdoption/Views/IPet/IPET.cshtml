@model IEnumerable<prjPetAdoption.Models.aniDataPicOne>

@{
    ViewBag.Title = "IPET";
}

<h2>iPet動物資訊</h2>
<div class="row well">
    <form class="form" role="form">
        <div class="=col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">縣市</span>

                <select class="form-control" id="City" name="City">
                    <option value="">全部</option>
                    <option value="臺北市">臺北市</option>
                    <option value="新北市">新北市</option>
                    <option value="基隆市">基隆市</option>
                    <option value="宜蘭縣">宜蘭縣</option>
                    <option value="桃園縣">桃園縣</option>
                    <option value="新竹縣">新竹縣</option>
                    <option value="新竹市">新竹市</option>
                    <option value="苗栗縣">苗栗縣</option>
                    <option value="臺中市">臺中市</option>
                    <option value="彰化縣">彰化縣</option>
                    <option value="南投縣">南投縣</option>
                    <option value="雲林縣">雲林縣</option>
                    <option value="嘉義縣">嘉義縣</option>
                    <option value="嘉義市">嘉義市</option>
                    <option value="臺南市">臺南市</option>
                    <option value="高雄市">高雄市</option>
                    <option value="屏東縣">屏東縣</option>
                    <option value="花蓮縣">花蓮縣</option>
                    <option value="臺東縣">臺東縣</option>
                    <option value="澎湖縣">澎湖縣</option>
                    <option value="金門縣">金門縣</option>
                    <option value="連江縣">連江縣</option>
                </select>

                @*@Html.DropDownList("City", null, "-不限-", new { @class = "form-control" })*@
            </div>
        </div>

        <div class="=col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">種類</span>
                @*@Html.DropDownList("City", null, "-全部-", new { @class = "form-control" })*@
            </div>
        </div>
        <div class="=col-lg-2">
            <button type="submit" id="buttonSubmit" class="btn btn-primary">
                <span class="glyphicon glyphicon-search">查詢</span>
            </button>
        </div>


    </form>
</div>

<div>
    @if (@ViewBag.IMG != "")
    {
        <img src="@ViewBag.IMG" style="max-width:80%" />
    }


</div>


<div id="masonry" class="container-fluid">
    @foreach (var item in Model)
    {

        if (@item.animalPicAddress == "")
        {
            <div class="thumbnail">
                <a href=@Url.Action("opAniOne", "opAnimal", new { id = @Html.DisplayFor(modelItem => item.animalID) })>
                    <div class="imgs">
                        <img src="http://i.imgur.com/SfojWcu.png" width="300px" height="auto" />
                    </div>
                    <div class="caption">
                        <div class="title">@Html.DisplayFor(modelItem => item.animalAddress)</div>
                        <div class="content">
                        </div>
                    </div>
                </a>
            </div>
        }
        else
        {
            <div class="thumbnail">
                <a href=@Url.Action("opAniOne", "opAnimal", new { id = @Html.DisplayFor(modelItem => item.animalID) })>
                    <div class="imgs">
                        <img src="@Html.DisplayFor(modelItem => item.animalPicAddress)" width="300px" height="auto" />
                    </div>
                    <div class="caption">
                        <div class="title">@Html.DisplayFor(modelItem => item.animalAddress)</div>
                        <div class="content">
                        </div>
                    </div>
                </a>
            </div>
        }



    }


</div>
@*@Html.PagedListPager((IPagedList)Model,
        page => Url.Action("opAnimalList", new
        {
            page = page,
            districts = ViewBag.SelectedDistrict,
            types = ViewBag.SelectedType

        }),
        PagedListRenderOptions.ClassicPlusFirstAndLast)*@



@section scripts{
    @Styles.Render("~/Content/masonry.css")
    @Scripts.Render("~/bundles/masonry")
    <script src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"></script>
    <script type="text/javascript">
        $(function () {

            var masonryNode = $('#masonry');
            masonryNode.imagesLoaded(function () {
                masonryNode.masonry({
                    itemSelector: '.thumbnail',
                    isFitWidth: true
                });
            });

        });
    </script>

}